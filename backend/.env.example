# Backend environment configuration for Codeera
# Copy this file to .env and adjust values as needed

# Server
PORT=5000

# JWT
JWT_SECRET=change_me_to_a_strong_secret
JWT_EXPIRES_IN=7d

# Database
DB_HOST=localhost
DB_USER=root
DB_PASS=
DB_NAME=codeera_db

# SMTP (for Nodemailer email verification)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
SMTP_FROM="Codeera <no-reply@yourdomain.com>"
